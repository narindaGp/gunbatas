
  <%- include('./partials/head.ejs') %>

  <body>
    <!-- navigation -->
    <%- include('./partials/navbar.ejs') %>
    
    <!-- welcome page/ main screen -->
    <%- include('./home/main.ejs') %>

      <!-- game choice -->
      <section id="game-choice" class="container-fluid">
        <div class="row px-5 py-auto h-100">
          <div class="col-lg-4">
            <p class="text-sm-center text-lg-start">What's so special?</p>
            <h3 class="fs-1 h1 text-sm-center text-lg-start">THE GAMES</h3>
          </div>

          <div class="col-lg-8">
            <div
              id="carouselExampleIndicators"
              class="carousel slide"
              data-bs-ride="carousel"
            >
              <div class="carousel-indicators">
                <button
                  type="button"
                  data-bs-target="#carouselExampleIndicators"
                  data-bs-slide-to="0"
                  class="active"
                  aria-current="true"
                  aria-label="Slide 1"
                ></button>
                <button
                  type="button"
                  data-bs-target="#carouselExampleIndicators"
                  data-bs-slide-to="1"
                  aria-label="Slide 2"
                ></button>
                <button
                  type="button"
                  data-bs-target="#carouselExampleIndicators"
                  data-bs-slide-to="2"
                  aria-label="Slide 3"
                ></button>
              </div>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img
                    src="/pict/rockpaperstrategy-1600.jpg"
                    class="d-block w-100"
                    alt="..."
                  />
                </div>
                <div class="carousel-item">
                  <img
                    src="/pict/requirements.png"
                    class="d-block w-100"
                    alt="..."
                  />
                </div>
                <div class="carousel-item">
                  <img
                    src="/pict/main-bg.jpg"
                    class="d-block w-100"
                    alt="..."
                  />
                </div>
              </div>
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
        </div>
      </section>

      <!-- features -->
      <section id="features" class="container-fluid">
        <div class="row">
          <div class="col-6"></div>
          <div class="col-lg-6">
            <div>
              <p class="text-sm-center text-lg-start">What's so special?</p>
              <h3 class="fs-1 h1 text-sm-center text-lg-start">FEATURES</h3>
            </div>
            <div>
              <button class="accordion">
                <div class="icon"></div>
                <h5 class="text-uppercase">Traditional games</h5>
              </button>

              <div class="panel">
                <p class="px-3">
                  If you miss your childhood, we provide many traditional games
                  here
                </p>
              </div>

              <button class="accordion">
                <div class="icon"></div>
                <h5 class="text-uppercase">game suit</h5>
              </button>
              <div class="panel">
                <p class="pl-2">Lorem ipsum...</p>
              </div>

              <button class="accordion">
                <div class="icon"></div>
                <h5 class="text-uppercase">TBD</h5>
              </button>
              <div class="panel">
                <p class="pl-2">Lorem ipsum...</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

   <!-- system requirements -->
   <section id="requirements">
    <div class="vignete">
      <div class="shadow container-fluid">
        <div class="container reflect">
          <div class="row">
            <p class="col text-white text-center mb-1 mb-md-3">
              Can My Computer Run this game?
            </p>
          </div>

          <div class="row my-lg-5">
            <h2
              class="col-6 col-sm-auto text-white text-uppercase fs-1 h1 fw-normal"
            >
              System Requirements
            </h2>
          </div>
          <div class="row mx-2">
            <div class="col-lg-3 col-md-6 col-sm-6 aborder py-3">
              <h3 class="text-color">OS:</h3>
              <p class="text-white">
                Windows 7 64-bit only (no OSX support at this time)
              </p>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 aborder py-3">
              <h3 class="text-color">Processor:</h3>
              <p class="text-white">
                Intel Core 2 Duo @ 2.4 GHZ or AMD Athion X2 @2.8 GHZ
              </p>
            </div>
          </div>
          <div class="row mx-2">
            <div class="col-lg-3 col-md-6 col-sm-6 aborder py-3">
              <h3 class="text-color">Memory:</h3>
              <p class="text-white">4 GB RAM</p>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 aborder py-3">
              <h3 class="text-color">Storage:</h3>
              <p class="text-white">8 GB available space</p>
            </div>
          </div>

          <div class="row mx-2">
            <div class="col-lg-6 col-md-12 col-sm-12 aborder py-3">
              <h3 class="text-color">GRAPHICS:</h3>
              <p class="text-white">
                NVIDIA GeForce GTX 6620 2GB or AMD Radeon HD 7850 2GB
                DirectX11 (Shader Model 5)
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

      <!-- top score -->
